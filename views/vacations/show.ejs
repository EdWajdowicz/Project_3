<h1 class="center">Culinary Packages Data For : 
  <%= vacation.title %>
</h1>
<img src=<%= "/images/"+ vacation.heroImage %> alt="">
<table class="table">  
  <tr>
    <th>Title</th>
    <td>
      <%= vacation.title %>
    </td>
  </tr>
  <tr>
    <th>Description</th>
    <td>
      <%= vacation.description %>
    </td>
  </tr>
  <tr>
    <th>Max Travelers</th>
    <td>
      <%= vacation.maxTravelers %>
    </td>
  </tr>
  <tr>
    <th>Cost</th>
    <td>$
      <%= vacation.cost %>
    </td>
  </tr>
  <tr>
    <th>Cuisine</th>
    <td>
      <%= vacation.cuisine %>
    </td>
  </tr>
  <tr>
    <th>Hero Image</th>
    <td>
      <%= vacation.heroImage %>
    </td>
  </tr>
  <tr>
    <th>Destination</th>
    <td>
      <%= vacation.destination %>
    </td>
  </tr>
  <tr>
    <th>Departure Location</th>
    <td>
      <%= vacation.departureLocation %>
    </td>
  </tr>
  <tr>
    <th>Departure Date</th>
    <td>
      <%= vacation.departureDate %>
    </td>
  </tr>
  <tr>
    <th>Return Date</th>
    <td>
      <%= vacation.returnDate %>
    </td>
  </tr>
</table>


<div>
  <% if (loggedIn) { %>
    <a class="button" href="<%=`/vacations/${vacation._id}/edit`%>">
      Edit Vacation Details
    </a>
    <% } %>
</div>
<div>
  <% if (loggedIn) { %>
    <a class="button" href="<%= `/vacations/${vacation._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')" a>Delete</a>
  <% } %>
</div>
<div>
  <a class="button" href="/vacations">View all vacations</a>
</div>
